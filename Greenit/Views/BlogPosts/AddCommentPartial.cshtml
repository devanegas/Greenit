@model Greenit.Models.Comment
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService Authorization
@{
    var canAdd = (await Authorization.AuthorizeAsync(User, MyIdentityData.BlogPolicy_Add)).Succeeded;
}

<form asp-action="AddComment">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" value="@Model.PostId" asp-for="PostId" />
    <div class="form-group">
        <label asp-for="Body" class="control-label">Comment</label>
        <input asp-for="Body" class="form-control" />
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>